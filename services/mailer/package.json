  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --skipLibCheck",
    "plop": "plop",
    "integration": "docker-compose run --rm mailer find ./src/integration-tests -name '*.spec.js' -exec ./node_modules/.bin/mocha --exit {} \\;",
    "update-version": "git show origin/master:services/mailer/package.json | jq -r '.version' | perl -pe 's/^((\\d+\\.)*)(\\d+)(.*)$/$1.($3+1).$4/e' | xargs -L1 -I'{}' jq '.version=\"{}\"' package.json > package.json_tmp && mv package.json_tmp package.json",
    "generate-swagger-definitions": "docker-compose run --rm mailer node ./node_modules/.bin/mocha \"src/integration-tests/swagger-def.spec.js\" --file=\"src/integration-tests/bootstrap.js\" --exit"
  },
